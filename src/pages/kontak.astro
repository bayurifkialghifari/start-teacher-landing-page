---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageBanner from '../components/PageBanner.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout title="Kontak - Privat Surabaya" description="Hubungi kami untuk informasi lebih lanjut mengenai les privat.">
    <Header />
    
    <PageBanner 
        title="Hubungi Kami" 
        subtitle="Kami siap membantu dan menjawab pertanyaan Anda."
        image="https://images.unsplash.com/photo-1423666639041-f14d70da4c40?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80"
    />

    <Breadcrumb items={[{ label: 'Kontak', href: '/kontak', current: true }]} />

    <main class="flex-grow">
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                 <div class="bg-secondary rounded-3xl overflow-hidden shadow-2xl">
                    <div class="grid lg:grid-cols-2">
                        <div class="p-10 lg:p-16 flex flex-col justify-center">
                            <h2 class="text-3xl font-bold text-white mb-6">Kantor Kami</h2>
                            <p class="text-slate-300 text-lg mb-8 leading-relaxed">
                                Kami menyediakan tempat belajar yang nyaman di kantor kami, didesain khusus untuk kegiatan les privat dan pelayanan lainnya di lokasi strategis.
                            </p>
                            <div class="space-y-4 mb-8">
                                <div class="flex items-center text-slate-300">
                                    <svg class="w-6 h-6 mr-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                                    <span>Jl. Pemuda No. 12, Surabaya</span>
                                </div>
                                <div class="flex items-center text-slate-300">
                                    <svg class="w-6 h-6 mr-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                                    <span>(022) 1234 5678</span>
                                </div>
                            </div>
                            <div>
                                <a href="https://maps.app.goo.gl/4iPCqXqebAnbwwdp9" target="_blank" class="inline-block bg-primary text-white font-semibold px-6 py-3 rounded-lg hover:bg-sky-600 transition">
                                    Lihat di Google Maps
                                </a>
                            </div>
                        </div>
                        <div class="h-80 lg:h-auto bg-slate-700 relative">
                            <!-- Placeholder for map or office image -->
                            <img src="https://images.unsplash.com/photo-1497366216548-37526070297c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1469&q=80" alt="Office Interior" class="absolute inset-0 w-full h-full object-cover">
                            <div class="absolute inset-0 bg-slate-900/50"></div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>
