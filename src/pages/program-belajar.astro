---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageBanner from '../components/PageBanner.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
---

<Layout title="Program Belajar - Privat Surabaya" description="Pilihan program belajar les privat terbaik di Surabaya.">
    <Header />
    
    <PageBanner 
        title="Program Belajar" 
        subtitle="Pilihan program terbaik untuk menunjang prestasi akademis."
        image="https://images.unsplash.com/photo-1503676260728-1c00da094a0b?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80"
    />

    <Breadcrumb items={[{ label: 'Program Belajar', href: '/program-belajar', current: true }]} />

    <main class="flex-grow">
        <section class="py-20 bg-slate-50">
            <div class="container mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center mb-16">
                    <h1 class="text-4xl font-bold text-secondary mb-4">Program Belajar Kami</h1>
                    <p class="text-slate-600 max-w-2xl mx-auto">Temukan program yang paling sesuai dengan kebutuhan akademis dan pengembangan diri kamu.</p>
                </div>
                <!-- Programs Categorized -->
                <div class="space-y-20">
                    
                    <!-- Pelajaran Sekolah -->
                    <div>
                        <div class="flex items-center mb-8">
                            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center text-primary mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                            </div>
                            <h2 class="text-3xl font-bold text-secondary">Pelajaran Sekolah</h2>
                        </div>
                        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Les Privat SD</h3>
                                <p class="text-slate-500 mb-4 text-sm">Semua mata pelajaran SD.</p>
                                <span class="block text-primary font-bold">Mulai Rp 80.000/sesi</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Les Privat SMP</h3>
                                <p class="text-slate-500 mb-4 text-sm">Matematika, IPA, Bahasa, dll.</p>
                                <span class="block text-primary font-bold">Mulai Rp 95.000/sesi</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Les Privat SMA</h3>
                                <p class="text-slate-500 mb-4 text-sm">Jurusan IPA/IPS, persiapan ujian.</p>
                                <span class="block text-primary font-bold">Mulai Rp 115.000/sesi</span>
                            </div>
                             <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Alumni / Gap Year</h3>
                                <p class="text-slate-500 mb-4 text-sm">Persiapan UTBK/SNBT intensif.</p>
                                <span class="block text-primary font-bold">Mulai Rp 135.000/sesi</span>
                            </div>
                        </div>
                    </div>

                    <!-- Al-Quran -->
                    <div>
                         <div class="flex items-center mb-8">
                            <div class="w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center text-emerald-600 mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                            </div>
                            <h2 class="text-3xl font-bold text-secondary">Mengaji & Al-Quran</h2>
                        </div>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">BTQ Anak</h3>
                                <p class="text-slate-500 mb-4 text-sm">Belajar Iqra & Al-Quran untuk anak.</p>
                                <span class="block text-emerald-600 font-bold">Mulai Rp 80.000/sesi</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">BTQ Dewasa</h3>
                                <p class="text-slate-500 mb-4 text-sm">Privat mengaji untuk dewasa.</p>
                                <span class="block text-emerald-600 font-bold">Mulai Rp 115.000/sesi</span>
                            </div>
                        </div>
                    </div>

                    <!-- Bahasa Asing -->
                    <div>
                         <div class="flex items-center mb-8">
                            <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center text-indigo-600 mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path></svg>
                            </div>
                            <h2 class="text-3xl font-bold text-secondary">Bahasa Asing</h2>
                        </div>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Bahasa Inggris (SD-Umum)</h3>
                                <p class="text-slate-500 mb-4 text-sm">General English, Conversation, ESP.</p>
                                <span class="block text-indigo-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Bahasa Jepang</h3>
                                <p class="text-slate-500 mb-4 text-sm">Untuk anak dan dewasa.</p>
                                <span class="block text-indigo-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Bahasa Mandarin</h3>
                                <p class="text-slate-500 mb-4 text-sm">Pelajaran dasar hingga lanjut.</p>
                                <span class="block text-indigo-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Bahasa Jerman</h3>
                                <p class="text-slate-500 mb-4 text-sm">Persiapan studi atau kerja.</p>
                                <span class="block text-indigo-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                             <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">BIPA</h3>
                                <p class="text-slate-500 mb-4 text-sm">Bahasa Indonesia untuk Penutur Asing.</p>
                                <span class="block text-indigo-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                        </div>
                    </div>

                    <!-- Keterampilan -->
                    <div>
                         <div class="flex items-center mb-8">
                            <div class="w-12 h-12 bg-orange-100 rounded-xl flex items-center justify-center text-orange-600 mr-4">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                            </div>
                            <h2 class="text-3xl font-bold text-secondary">Keterampilan & Enterprise</h2>
                        </div>
                        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Renang</h3>
                                <p class="text-slate-500 mb-4 text-sm">Les privat renang anak & dewasa.</p>
                                <span class="block text-orange-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                            <div class="bg-white p-6 rounded-xl border border-slate-200 hover:shadow-lg transition">
                                <h3 class="text-xl font-bold text-secondary mb-2">Pelatihan Perusahaan</h3>
                                <p class="text-slate-500 mb-4 text-sm">In-house training untuk karyawan.</p>
                                <span class="block text-pink-600 font-bold text-sm">Hubungi Kami</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>
