<header class="fixed w-full top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-slate-100" x-data="{ mobileMenuOpen: false }">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-20">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
                <a href="/" class="text-2xl font-bold text-secondary">
                    Privat<span class="text-primary">Surabaya</span>
                </a>
            </div>

            <!-- Desktop Menu -->
            <nav class="hidden md:flex space-x-8">
                <a href="/" class="text-slate-600 hover:text-primary font-medium transition">Beranda</a>
                <a href="/tentang-kami" class="text-slate-600 hover:text-primary font-medium transition">Tentang Kami</a>
                <a href="/program-belajar" class="text-slate-600 hover:text-primary font-medium transition">Program Belajar</a>
                <a href="/berita" class="text-slate-600 hover:text-primary font-medium transition">Berita</a>
                <a href="/lowongan-guru" class="text-slate-600 hover:text-primary font-medium transition">Lowongan Guru</a>
                <a href="/kontak" class="text-slate-600 hover:text-primary font-medium transition">Kontak</a>
            </nav>

            <!-- Mobile Menu Button -->
            <div class="md:hidden flex items-center">
                <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-slate-600 hover:text-primary focus:outline-none">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" x-show="!mobileMenuOpen"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" x-show="mobileMenuOpen" x-cloak/>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div x-show="mobileMenuOpen" 
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 -translate-y-2"
         x-transition:enter-end="opacity-100 translate-y-0"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 translate-y-0"
         x-transition:leave-end="opacity-0 -translate-y-2"
         class="md:hidden bg-white border-t border-slate-100 shadow-lg" x-cloak>
        <div class="pt-2 pb-4 space-y-1 px-4">
            <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Beranda</a>
            <a href="/tentang-kami" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Tentang Kami</a>
            <a href="/program-belajar" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Program Belajar</a>
            <a href="/berita" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Berita</a>
            <a href="/lowongan-guru" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Lowongan Guru</a>
            <a href="/kontak" class="block px-3 py-2 rounded-md text-base font-medium text-slate-700 hover:text-primary hover:bg-slate-50">Kontak</a>
        </div>
    </div>
</header>
